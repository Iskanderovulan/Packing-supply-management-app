{
    "jsxSingleQuote": false,
    "singleQuote": false,
    "semi": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "printWidth": 100,
    "bracketSameLine": false,
    "useTabs": false,
    "arrowParens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "singleQuote": false,
                "tabWidth": 4,
                "printWidth": 80
            }
        },
        {
            "files": "*.scss",
            "options": {
                "singleQuote": false,
                "tabWidth": 4,
                "printWidth": 80
            }
        }
    ]
}
